#!/bin/sh
name="@PACKAGE_NAME@"
version="@PACKAGE_VERSION@"

prefix="@prefix@"
exec_prefix="@exec_prefix@"
includedir="@includedir@"
libdir="@libdir@"

CC="@CC@"
INSTALL="@INSTALL@"
CFLAGS="-I${includedir} @JS_CFLAGS@"
LIBS="-L${libdir} -ljsmm @JS_LIBS@"

usage="\
Usage: $name-config [--prefix] [--exec-prefix]
                 [--version] [--cflags] [--libs] 
                        
   --prefix       Show prefix where $name is installed.
   --exec-prefix  Show prefix where $name executables are installed.
   --version      Show $name version.
   --cflags       Show compiler flags needed to compile a module.
   --libs         Show linker flags needed to link a module.
"

if test $# -eq 0; then
	echo "${usage}" 1>&2
	exit 1
fi

while test $# -gt 0; do
	case "$1" in
	-*=*) 
		optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` 
		;;
	*) 
		optarg= 
		;;
	  esac

	case $1 in
	--prefix)
		echo $prefix
		;;
	--exec-prefix)
		echo $exec_prefix
		;;
	--version)
		echo $version
		;;
	--cflags)
		echo $CFLAGS
		;;
	--libs)
		echo $LIBS
    ;;
  *)
		echo "${usage}" 1>&2
		exit 1
		;;
	esac
	shift
done

